{
    "root":true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort",
        "import",
        "formatjs",
        "prettier"
    ],
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:prettier/recommended"
    ],
    "settings": {
        "import/extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ],
        "import/parsers": {
            "@typescript-eslint/parser": [
                ".ts",
                ".tsx"
            ]
        },
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "formatjs/enforce-id": [
            "error",
            {
                "idInterpolationPattern": "[sha512:contenthash:base64:6]"
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 104,
                "tabWidth": 4,
                "comments": 104,
                "ignoreComments": false,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.test.jsx",
                "**/*.test.tsx",
                "**/*.spec.js",
                "**/*.spec.jsx",
                "**/*.spec.tsx"
            ],
            "env": {
                "node": true,
                "jest": true
            },
            "extends": ["plugin:testing-library/react"],
            "rules": {
                "simple-import-sort/imports": "off",
                "import/order": [
                    "error",
                    {
                        "newlines-between": "always"
                    }
                ]
            }
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        "package-lock.json",
        "postcss.config.js",
        "tailwind.config.js",
        "webpack.config.js",
        "babel.config.js",
        "apollo.config.js",
        ".storybook/*",
        ".github/*",
        "scripts/*",
        "**/stories/**/*",
        "**/types/**/*",
        "*.d.ts"
    ]
}
